{{>layouts/header1}}
<div class="d-flex align-items-center justify-content-center" style="height: 100vh; background-color: #f8f9fa;">
    <div class="card shadow-sm" style="width: 300px;">
        <div class="card-body">
            <h3 class="card-title text-center mb-4">Join</h3>
            <form id="joinForm">
                <div class="mb-3">
                    <label for="userId" class="form-label">UserId</label>
                    <input type="text" class="form-control" id="userId" placeholder="Enter userId" autofocus required alt="사용자ID" minlength="5" maxlength="30">
                    <div class="invalid-feedback" id="userIdError"></div> <!-- 오류 메시지를 출력할 div -->
                    <button type="button" class="btn btn-primary mt-2 w-100" onclick="idCheckForm()">Check</button>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" placeholder="Enter password" required alt="비밀번호" minlength="8" maxlength="30">
                    <div class="invalid-feedback" id="passwordError"></div> <!-- 오류 메시지를 출력할 div -->
                    <input type="password" class="form-control mt-2" id="rePassword" placeholder="Enter rePassword" required alt="비밀번호 확인" maxlength="30">
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="text" class="form-control" id="email" placeholder="Enter email" autofocus required alt="이메일" minlength="10" maxlength="50">
                    <div class="invalid-feedback" id="emailError"></div> <!-- 오류 메시지를 출력할 div -->
                </div>
                <button type="button" id="btnJoin" class="btn btn-primary w-100" onclick="submitForm()" disabled>Join</button>
            </form>
        </div>
    </div>
</div>
{{>utility/toast}}
<script src="/js/app/join.js"></script>
<script src="/js/utility/regexpCheck.js"></script>
