{{>layouts/header1}}
<link href="/css/mypage.css" rel="stylesheet" />
{{>layouts/navigation}}

<!-- 레이아웃을 위한 컨테이너 -->
<div class="page-container">
    <!-- 세로 메뉴바 -->
    <aside class="sidebar">
        <ul class="menu-list">
            <li class="menu-item">
                <a href="javascript:void(0);" onclick="userInfo.loadUserInfo()">회원정보 수정</a>
            </li>
            <!-- 다른 메뉴들도 여기에 추가 가능 -->
        </ul>
    </aside>

    <!-- 중앙에 콘텐츠를 위한 공간 -->
    <div class="content">
        <div id="content">
            <!-- 로그인 체크 및 타이머 등 동적으로 추가될 내용 -->
        </div>
    </div>
</div>

<!-- 비밀번호 변경 팝업 창 -->
<div id="passwordPopup" class="popup">
    <div class="popup-content">
        <span class="close-btn" onclick="userInfo.closePopup()">&times;</span>
        <h2>비밀번호 변경</h2>
        <form id="passwordForm">
            <div class="form-group">
                <label for="currentPassword">현재 비밀번호</label>
                <input type="password" id="currentPassword" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="newPassword">새 비밀번호</label>
                <input type="password" id="newPassword" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="confirmNewPassword">새 비밀번호 확인</label>
                <input type="password" id="confirmNewPassword" class="form-control" required />
            </div>
            <button type="button" class="btn btn-primary" onclick="submitPasswordChange()">비밀번호 변경</button>
        </form>
    </div>
</div>

{{>utility/toast}}
<!-- 스크립트 로드 -->
<script src="/js/app/mypage.js"></script>
{{>layouts/footer1}}
